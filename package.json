{
  "name": "citadel",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "bun run build:app",
    "build:app": "tauri build",
    "build:web": "tsc && vite build",
    "dev": "bun run dev:app",
    "dev:app": "tauri dev",
    "dev:web": "vite dev",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "bun format:web; bun format:backend",
    "format:backend": "cd src-tauri; cargo fmt",
    "format:web": "biome format --write src/; prettier --write src/",
    "format:check": "biome format src/ && prettier --check src/ && (cd src-tauri; cargo fmt --check)",
    "lint": "bun lint:web && bun lint:backend",
    "lint:web": "biome lint src/ && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:backend": "cd src-tauri; cargo clippy",
    "quality": "bun format:check; bun lint",
    "preview:web": "vite preview",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@fontsource/fira-mono": "^4.5.10",
    "@iconify-json/f7": "^1.1.0",
    "@melt-ui/pp": "^0.3.0",
    "@melt-ui/svelte": "^0.70.0",
    "@neoconfetti/svelte": "^1.0.0",
    "@storybook/addon-essentials": "^8.0.0-rc.1",
    "@storybook/addon-interactions": "^8.0.0-rc.1",
    "@storybook/addon-links": "^8.0.0-rc.1",
    "@storybook/addon-svelte-csf": "^v4.1.2-next.0",
    "@storybook/blocks": "^8.0.0-rc.1",
    "@storybook/svelte": "^8.0.0-rc.1",
    "@storybook/sveltekit": "^8.0.0-rc.1",
    "@storybook/test": "^8.0.0-rc.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tauri-apps/cli": "^1",
    "@types/react": "18.2",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.1",
    "storybook": "^8.0.0-rc.1",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "svelte-language-server": "^0.16.3",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-svelte-plugin": "^0.3.37",
    "unplugin-icons": "^0.18.2",
    "vite": "^5.0.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@crabnebula/tauri-plugin-drag": "^0.2.0",
    "@tauri-apps/api": "^1",
    "bits-ui": "^0.14.0",
    "clsx": "^2.1.0",
    "radix-icons-svelte": "^1.2.1",
    "react": "18.2",
    "react-dom": "18.2",
    "svelte-virtual": "next",
    "tailwind-merge": "^2.2.0",
    "tailwind-variants": "^0.1.20",
    "tauri-settings": "^0.3.4"
  }
}
